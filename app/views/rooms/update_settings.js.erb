<% if @room.errors.present? %>
    $(".invalid-feedback").hide();
	<% if @room.errors.present? %>
	    $(".invalid-feedback").hide();
		<% @room.errors.messages.each do |message| %>
			<% if message[0] == :name %>
				$("#room_name_blank").html("<%= message[1].join %>");
				$("#room_name_blank").show();
			<% elsif message[0] == :uid %>
				$("#custom_link_exists").html("<%= message[1].join %>");
				$("#custom_link_exists").show();
			<% end%>
		<% end%>
	<% end%>
<%else%>
 	window.location.href = "<%= room_path(@room)%>"
<% end%>
